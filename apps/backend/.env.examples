# =======================================
# Azure AI Showcase Backend .env サンプル
# =======================================

# アプリケーション設定
APP_ENV=local
APP_LOG_LEVEL=info
APP_ALLOWED_ORIGINS=http://localhost:5173
APP_API_KEY=

# リアルタイムアバター会話デモ用環境変数
AZURE_AVATAR_DEFAULT_CHARACTER=lisa-casual-sitting # ディフォルトのアバター設定
AZURE_VOICE_LIVE_ALLOWED_MODELS=gpt-realtime,gpt-realtime-mini,gpt-4o,gpt-4o-mini,gpt-4.1,gpt-4.1-mini,gpt-5,gpt-5-mini,gpt-5-nano,gpt-5-chat,phi4-mm-realtime,phi4-mini
AZURE_VOICE_LIVE_DEPLOYMENT_ID=gpt-realtime # ディフォルトのモデル設定
AZURE_VOICE_LIVE_AGENT_ID=
AZURE_VOICE_LIVE_ENDPOINT=<your_endpoint> # 接続先エンドポイント
AZURE_VOICE_LIVE_API_KEY=<your_api_key> # Only required if using API key authentication
